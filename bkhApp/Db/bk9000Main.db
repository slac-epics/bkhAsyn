#-- Global error flag  -----------------
record(bi, "$(P):Error"){
  field(DESC, "Error summary")
  field(ZNAM, "OK")
  field(ONAM, "Error")
  field(ZSV,  "NO_ALARM")
  field(OSV,  "MAJOR")
}
